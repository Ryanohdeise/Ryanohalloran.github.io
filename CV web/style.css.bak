
body{
	background-color:grey;
	margin:0;
	padding:0;
	box-sizing: border-box;
	
}

main{
	margin:1rem;
	display:grid;
	grid-template-columns:33% 1fr;
	grid-gap: 1rem;
	
}
ul{
	list-style: none;
	
}
.left{
	background-color: aquamarine;
}

.personal, .skills, .languages{
	padding:1rem;
	line-height:2;
	
}

.left-image{
		position: relative;
		
}
.left-image img{
	width:100%;
	height:400px;
}
.left-image h2{
	position: absolute;
	bottom:0;
	left:1rem;
	color: aquamarine;
}
.date{
	background-color:aquamarine;
	color:black;
	border-radius: 0.5px;
}
.right{
padding:1rem;
background-color:white;
}
.experience ul {
	margin: 2rem 0;
}
.education ul{
	margin: 2rem 0;
}
.experience, .education{
	line-height: 2;
	background-color:white;
}
.education{
	margin: 2rem 0;
}
h1{
	font-size:20;
}
.main{
	flex:3;
	text-align:center;
	background-color:aquamarine;
}